{
	"name": "server",
	"version": "0.0.1",
	"description": "server that implements the backend code for the ticker",
	"main": "server.js",
	"jest": {
		"testEnvironment": "jest-environment-node",
		"transformIgnorePatterns": [
			"node_modules/(?!bitbox-sdk/index.js)"
		]
	},
	"scripts": {
		"start": "node ./build/server.js",
		"start:prod": "pm2 start ./build/server.js",
		"start:dev": "nodemon",
		"build": "rimraf ./build && tsc",
		"test:dev": "jest --watchAll --verbose --forceExit --detectOpenHandles --runInBand || true",
		"test:prod": "jest --verbose --forceExit --detectOpenHandles --runInBand || true",
		"coverage": "jest --coverage --detectOpenHandles"
	},
	"author": "Joseph Akayesi (https://josephakayesi.com)",
	"license": "ISC",
	"dependencies": {
		"@typegoose/typegoose": "^7.6.0",
		"@types/cors": "^2.8.10",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"mongoose": "^5.10.18",
		"pm2": "^4.5.6",
		"redis": "^3.1.2",
		"rimraf": "^3.0.2",
		"socket.io": "^4.1.2",
		"ts-node": "^10.7.0",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.5"
	},
	"devDependencies": {
		"@types/compression": "^1.7.0",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.12",
		"@types/jest": "^26.0.23",
		"@types/mongoose": "^5.10.5",
		"@types/redis": "^2.8.29",
		"@types/socket.io": "^2.1.3",
		"@types/winston": "^2.4.4",
		"jest": "^27.0.5",
		"nodemon": "^2.0.7",
		"ts-jest": "^27.0.3",
		"typescript": "^4.3.4"
	}
}
